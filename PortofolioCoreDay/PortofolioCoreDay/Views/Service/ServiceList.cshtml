@model List<Service>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}
<h2>Hizmetler Listesi</h2>
<table class="table table-bordered"
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
                    <tr>
                         <td>@item.ServiceId</td>
                         <td>@item.ServiceName</td>
                         <td>@item.Title</td>
                         <td>@item.Description</td>
                         <td><a href="/Service/DeleteService/@item.ServiceId"class="btn btn-danger">Sil</a></td>
                         <td><a href="/Service/UpdateService/@item.ServiceId"class="btn btn-success">Güncelle</a></td>
                    </tr>
    }
    </table>
<a href="/Service/CreateService" class="btn btn-info">Yeni Hizmet Girişi</a>

