@model List<PortofolioCoreDay.Entities.Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<h1>Referans İşlemleri</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Adı </th>
        <th>Referans Unvan </th>
        <th>Açıklama </th>
        <th>Sil </th>
        <th>Güncelle </th>
    </tr>
    @foreach ( var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">SİL</a/td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">GÜNCELLE</a</td>
        </tr>
    }
</table>
<a href ="/Testimonial/CreateTestimonial/" class = "btn btn-info">Yeni Referans Girişi</a>

