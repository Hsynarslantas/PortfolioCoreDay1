@model List<Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}
<h2>İletişim Listesi</h2>
<table class="table table-bordered"
    <tr>
        <th>#</th>
        <th>Email</th>
        <th>Adres</th>
        <th>Telefon Numarası</th>
        <th>Harita Bilgisi</th>

        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
                        <tr>
                             <td>@item.ContactId</td>
                             <td>@item.Email</td>
                             <td>@item.Address</td>
                             <td>@item.Phone</td>
                             <td>@item.MapUrl</td>
                             <td><a href="/Contact/DeleteContact/@item.ContactId"class="btn btn-danger">Sil</a></td>
                             <td><a href="/Contact/UpdateContact/@item.ContactId"class="btn btn-success">Güncelle</a></td>
                        </tr>
    }
    </table>
<a href="/Contact/CreateContact" class="btn btn-info">Yeni İletişim Bilgisi Girişi</a>
