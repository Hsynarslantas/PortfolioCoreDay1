@model List<Portfolio>
@{
    ViewData["Title"] = "ProjectList";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<h1>Proje Listesi</h1>
<table class="table table-bordered"
    <tr> 
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
             <td>@item.PortfolioId</td>
             <td>@item.Title</td>
             <td>@item.Description</td>
             <td>@item.Category.CategoryName</td>
             <td><a href="/Porfolio/DeleteProject/@item.PortfolioId"class="btn btn-danger">Sil</a></td>
             <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId"class="btn btn-success">Güncelle</a></td>
        </tr>
    }
    </table>
<a href="/Portfolio/CreatePortfolio/" class="btn btn-info">Yeni Proje Girişi</a>

