    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var status = '@TempData["MessageStatus"]';
                var message = '@TempData["MessageText"]';

                if (status === "Success") {
                    Swal.fire({
                        title: 'Başarılı!',
                        text: message,
                        icon: 'success',
                        confirmButtonText: 'Tamam'
                    });
                } else if (status === "Error") {
                    Swal.fire({
                        title: 'Hata!',
                        text: message,
                        icon: 'error',
                        confirmButtonText: 'Tamam'
                    });
                }
            });
        </script>
    }

