@{
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<h2>Yeni Mesaj Oluştur</h2>
<form asp-action="CreateMessage" method="post" class="w-100 d-flex flex-column">
    <div class="row">
        <div class="col-md-6 form-group mb-3">
            <input type="text" name="NameSurname" class="form-control" placeholder="İsim Soyisim" required />
        </div>
        <div class="col-md-6 form-group mb-3">
            <input type="email" name="Email" class="form-control" placeholder="Email" required />
        </div>
    </div>
    <div class="form-group mb-3">
        <input type="text" name="Subject" class="form-control" placeholder="Konu" required />
    </div>
    <div class="form-group mb-3">
        <textarea name="MessageDetail" class="form-control" rows="6" placeholder="Mesajınız" required></textarea>
    </div>
    <div class="text-center mt-3">
        <button type="submit" class="btn btn-success">Gönder</button>
    </div>
</form>
